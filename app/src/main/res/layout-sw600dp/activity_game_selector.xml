<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hospital">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ic_launcher"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/img_fondo" />

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_below="@+id/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/tv_pregunta"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ic_launcher"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/azul_oscuro"
        android:editable="true"
        android:enabled="true"
        android:gravity="center"
        android:maxLines="3"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>


    <RelativeLayout
        android:id="@+id/rl_btn"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:gravity="bottom">

        <ProgressBar
            android:id="@+id/PbSelector"
            style="@style/CustomProgressBar"
            android:maxHeight="40dp"
            android:maxWidth="300dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/verde"
            android:indeterminate="false"
            android:max="110"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progress_bar_horizontal" />

        <TextView
            android:id="@+id/tv_porcentaje"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/PbSelector"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#00000000"
            android:textAlignment="center">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_above="@+id/PbSelector"
        android:layout_alignStart="@+id/PbSelector"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="13dp"
            android:layout_marginStart="240dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_feliz" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="13dp"
            android:layout_marginStart="180dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_feliz" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="13dp"
            android:layout_marginStart="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_feliz" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginRight="13dp"
            android:layout_marginStart="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_feliz" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"

            app:srcCompat="@drawable/img_feliz" />

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_opciones_satisfaccion"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingStart="35dp"
        android:layout_above="@+id/view_below"
        android:background="@drawable/custom_radiogroup_divider"
        android:buttonTint="@color/red">

    </RadioGroup>

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Enviar"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_siguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:background="#69F0AE"
        android:gravity="center"
        android:text="Next" />


</LinearLayout>