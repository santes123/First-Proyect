<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pumpun.proyectformapiantoniogonzalez.Activities.Formulario1.Fragments.fragment_radioButtons.GameActivityRadioButtons"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/ic_launcher"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/btn_answer_1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_pregunta"
            android:background="@drawable/boton_optimizado_final" />

        <Button
            android:id="@+id/btn_answer_2"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_pregunta"
            android:background="@drawable/boton_optimizado_final"
            android:paddingBottom="15dp" />

        <Button
            android:id="@+id/btn_answer_3"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/btn_answer_4"
            android:background="@drawable/boton_optimizado_final" />

        <Button
            android:id="@+id/btn_answer_4"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btn_answer_1"
            android:layout_marginTop="63dp"
            android:background="@drawable/boton_optimizado_final" />

        <TextView
            android:id="@+id/tv_pregunta"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ic_launcher"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="46dp"
            android:background="@color/azul"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:visibility="visible"
            android:layout_above="@+id/btn_answer_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_launcher"
            android:layout_centerHorizontal="true"
            android:text="Formulario"
            android:textSize="18dp" />
        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Enviar"
            android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>